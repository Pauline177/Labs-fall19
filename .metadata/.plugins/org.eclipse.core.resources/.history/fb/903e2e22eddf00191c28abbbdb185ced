package module02;

public class DeskPedalPlus extends DeskPedal {

	private int time;
	
	public DeskPedalPlus(String c, int t) {
		super(c);
		this.time = t;
	}
	
	@Override
	public void pedal() {
		System.out.println("pedaling..");
		time = time + 15;
		System.out.println(time);
	}
	
	public void reset() {
		time = 0;
	}
	
	
	public void printReport() {
		System.out.println("Total time pedaled: " + time);
		if(time > 60) {
			int remainder = time % 60;
			int min = time /60;
			System.out.println( Math.ceil(min)+ "'" +remainder +"''");
		}else 
			System.out.println(time);
	}
	
	@Override
	public String toString() {
		System.out.println(getColor() + " " + this.getClass().getSimpleName());
		return time + "min";
		
	}
}

