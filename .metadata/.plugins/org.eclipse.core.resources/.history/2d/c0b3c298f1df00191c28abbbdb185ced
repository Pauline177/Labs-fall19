package module02;

public class DeskPedalPlus extends DeskPedal {

	private int time;
	
	public DeskPedalPlus(String c, int t) {
		super(c);
		this.time = t;
	}
	
	@Override
	public void pedal() {
		System.out.println("pedaling..");
		time = time + 15;
//		System.out.println(time);
	}
	
	public void reset() {
		time = 0;
	}
	
	
	public void printReport() {
		int remainder = time % 60;
		int min = time / 60;
		
		if(time >= 60) {
			

			System.out.println("Total time pedaled: " + min+ "' " + remainder +"''");
		}else if(time == 60) {
			
			System.out.println("Total time pedaled: " + min);
		}
		else
			System.out.println("Total time pedaled: " + time + "''");
	}
	
	@Override
	public String toString() {

		return getColor() + " " + this.getClass().getSimpleName() + " " + time+ " " + "min";
		
	}
}

